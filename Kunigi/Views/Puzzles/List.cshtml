@model IEnumerable<PuzzleViewModel>

<h2>Puzzles for Game @ViewBag.GameId</h2>

<p>
    <a asp-action="Create" asp-route-gameId="@ViewBag.GameId" class="btn btn-primary">Create New Puzzle</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Question</th>
        <th>Answer</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Question</td>
            <td>@item.Answer</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>