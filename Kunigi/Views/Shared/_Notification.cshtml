@if (TempData["success"] != null)
{
    <div class="alert alert-dismissible alert-success auto-dismiss">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["success"]</strong>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-dismissible alert-danger auto-dismiss">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["error"]</strong>
    </div>
}

@if (TempData["info"] != null)
{
    <div class="alert alert-dismissible alert-info auto-dismiss">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["info"]</strong>
    </div>
}