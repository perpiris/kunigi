@model TeamEditViewModel

@{
    ViewData["Title"] = $"Επεξεργασία {Model.Name}";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>
<div class="form-container-large">
    <form asp-action="EditTeam" asp-controller="Team" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="ProfileImageUrl" class="form-label"></label>
                <input type="file" name="profileImage" class="form-control mb-2" accept="image/png, image/jpeg"/>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="CreatedYear" class="form-label"></label>
                <input asp-for="CreatedYear" class="form-control mb-2" type="number" min="1900" max="2100"/>
                <span asp-validation-for="CreatedYear" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="Facebook" class="form-label"></label>
                <input asp-for="Facebook" class="form-control mb-2"/>
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="Instagram" class="form-label"></label>
                <input asp-for="Instagram" class="form-control mb-2"/>
                <span asp-validation-for="Instagram" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="Youtube" class="form-label"></label>
                <input asp-for="Youtube" class="form-control mb-2"/>
                <span asp-validation-for="Youtube" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="Website" class="form-label"></label>
                <input asp-for="Website" class="form-control mb-2"/>
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="IsActive" class="form-label"></label>
                <input asp-for="IsActive" class="form-check-input mb-2" type="checkbox"/>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="col-12 mb-4 form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control mb-2" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Αποθήκευση</button>
        <a asp-controller="Team" asp-action="TeamActions" asp-route-teamSlug="@Model.TeamSlug" class="btn btn-secondary">Πίσω</a>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}