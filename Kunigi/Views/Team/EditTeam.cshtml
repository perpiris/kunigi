@model TeamEditViewModel

@{
    ViewData["Title"] = $"Επεξεργασία {Model.Name}";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
        <a asp-controller="Home" asp-action="Dashboard">Διαχείριση</a>
    </li>
    <li class="breadcrumb-item">
        <a asp-controller="Team" asp-action="TeamActions" asp-route-teamSlug="@Model.Slug">@Model.Name</a>
    </li>
    <li class="breadcrumb-item active">Επεξεργασία</li>
</ol>

<div class="form-container-large">
    @using (Html.BeginForm("EditTeam", "Team", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="Slug" class="form-label mt-4"></label>
                <input asp-for="Slug" class="form-control"/>
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="ProfileImageUrl" class="form-label mt-4"></label>
                <input type="file" name="profileImage" class="form-control" accept="image/png, image/jpeg"/>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="Facebook" class="form-label"></label>
                <input asp-for="Facebook" class="form-control"/>
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="Instagram" class="form-label"></label>
                <input asp-for="Instagram" class="form-control"/>
                <span asp-validation-for="Instagram" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="Youtube" class="form-label"></label>
                <input asp-for="Youtube" class="form-control"/>
                <span asp-validation-for="Youtube" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 mb-4 form-group">
                <label asp-for="Website" class="form-label"></label>
                <input asp-for="Website" class="form-control"/>
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>
            <div class="col-12 mb-4 form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Αποθήκευση</button>
        <button class="btn btn-secondary" id="previous-page-button">Πίσω</button>
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}