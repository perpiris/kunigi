@model TeamDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<style>
    .card-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-body i {
        font-size: 1.5rem;
        color: #2c3e50;
    }
</style>

<h3 class="mb-4 text-center">@Model.Name</h3>
<hr/>
<h3 class="mb-4 mt-4">Ενέργειες</h3>

<div class="row row-cols-1 row-cols-md-4 g-4">
    <div class="col">
        <a asp-controller="Team" asp-action="TeamDetails" asp-route-teamSlug="@Model.Slug"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Προβολή</h5>
                    <i class="bi bi-eye"></i>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-controller="Team" asp-action="EditTeam" asp-route-teamSlug="@Model.Slug"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Επεξεργασία</h5>
                    <i class="bi bi-pencil"></i>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-controller="Team" asp-action="EditTeamManagers" asp-route-teamSlug="@Model.Slug"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Διαχειριστές</h5>
                    <i class="bi bi-people"></i>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-controller="Team" asp-action="TeamMediaManagement" asp-route-teamSlug="@Model.Slug"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Υλικό</h5>
                    <i class="bi bi-card-image"></i>
                </div>
            </div>
        </a>
    </div>
</div>

@if (Model.GamesHosted.Any())
{
    <h3 class="mb-4 mt-4">Παιχνίδια</h3>

    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var game in Model.GamesHosted)
        {
            <div class="col">
                <a asp-controller="Game" asp-action="ParentGameActions" asp-route-gameYear="@game.Year" class="card-link">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title text-center">@game.Year</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}