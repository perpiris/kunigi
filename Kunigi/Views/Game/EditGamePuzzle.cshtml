@model PuzzleEditViewModel

@{
    ViewData["Title"] = "Επεξεργασία Γρίφου";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>
<div class="form-container-large">
    <form asp-action="EditGamePuzzle" asp-controller="Game" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="PuzzleId"/>
        <div class="row">
            <div class="col-12 mb-4 form-group">
                <label asp-for="Question" class="form-label"></label>
                <textarea asp-for="Question" class="form-control mb-2" rows="6"></textarea>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="col-12 mb-4 form-group">
                <label asp-for="Answer" class="form-label"></label>
                <textarea asp-for="Answer" class="form-control mb-2" rows="6"></textarea>
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-4 mb-4 form-group">
                <label asp-for="QuestionMediaFiles" class="form-label"></label>
                <input type="file" name="questionMediaFiles" class="form-control" multiple/>
            </div>
            <div class="col-12 col-md-4 mb-4 form-group">
                <label asp-for="AnswerMediaFiles" class="form-label"></label>
                <input type="file" name="answerMediaFiles" class="form-control" multiple/>
            </div>
            <div class="col-12 col-md-4 mb-4 form-group">
                <label asp-for="Group" class="form-label"></label>
                <input asp-for="Group" class="form-control mb-2" type="number"/>
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Αποθήκευση</button>
        <a asp-controller="Game" asp-action="GameActions" asp-route-gameId="@Model.GameId" class="btn btn-secondary">Πίσω</a>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}