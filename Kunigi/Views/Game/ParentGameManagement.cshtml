@model List<ParentGameDetailsViewModel>

@{
    ViewData["Title"] = "Διαχείρηση Παιχνιδιών";
}

<div class="d-flex flex-wrap align-items-center mb-4">
    <h2 class="mb-0 me-3 display-5 flex-grow-1">Διαχείριση Παιχνιδιών</h2>
    <div>
        <a class="btn btn-primary"
           asp-controller="Game" asp-action="CreateParentGame">
            Δημιουργία
        </a>
    </div>
</div>

@if (Model == null || Model.Count == 0)
{
    <h2 class="mb-4 display-5 text-center">Δεν βρέθηκαν δεδομένα.</h2>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Τίτλος</th>
            <th>Διοργανωτής</th>
            <th>Ενέργειες</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Host</td>
                <td>
                    <a href="@Url.Action("GameDetails", "Game", new { gameYear = game.Year })" class="btn btn-info">Προβολή</a>
                    <a href="@Url.Action("EditParentGame", "Game", new { gameYear = game.Year })" class="btn btn-primary">Επεξεργασία</a>
                    <a href="@Url.Action("GameList", "Game", new { gameYear = game.Year })" class="btn btn-primary">Παιχνίδια</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <ul class="pagination justify-content-center mt-5">
        @for (var pageIndex = 1; pageIndex <= ViewBag.PageInfo.TotalPages; pageIndex++)
        {
            <li class="page-item @(ViewBag.PageInfo.CurrentPage == pageIndex ? "active" : "")">
                <a class="page-link" asp-controller="Game" asp-action="ParentGameManagement" asp-route-pageIndex="@pageIndex">@(pageIndex)</a>
            </li>
        }
    </ul>
}