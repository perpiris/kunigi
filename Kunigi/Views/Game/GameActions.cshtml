@model GameDetailsViewModel

@{
    ViewData["Title"] = Model.Year;
}

<style>
    .card-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-body i {
        font-size: 1.5rem;
        color: #2c3e50;
    }
</style>

<h2 class="mb-4">@($"{Model.Title} ({Model.Year}) - {Model.Type}")</h2>
<h4 class="mb-4">Ενέργειες</h4>

<div class="row row-cols-1 row-cols-md-4 g-4 mb-4">
    <div class="col">
        <a asp-controller="Game" asp-action="ParentGameDetails" asp-route-gameYear="@Model.Year"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Προβολή</h5>
                    <i class="bi bi-eye"></i>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-controller="Game" asp-action="EditParentGame" asp-route-gameYear="@Model.Year"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Επεξεργασία</h5>
                    <i class="bi bi-pencil"></i>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-controller="Game" asp-action="EditParentGame" asp-route-gameYear="@Model.Year"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Γρίφοι</h5>
                    <i class="bi bi-puzzle"></i>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-controller="Game" asp-action="GameMediaManagement" asp-route-gameYear="@Model.Year"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Υλικό</h5>
                    <i class="bi bi-card-image"></i>
                </div>
            </div>
        </a>
    </div>
</div>