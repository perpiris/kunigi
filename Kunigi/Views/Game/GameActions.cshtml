@model GameDetailsViewModel

@{
    ViewData["Title"] = $"{Model.ParentGameTitle} ({Model.Year}) - {Model.GameType}";
}

<style>
    .card-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-body i {
        font-size: 1.5rem;
        color: #2c3e50;
    }
</style>

<h2 class="mb-4">@ViewData["Title"]</h2>
<h4 class="mb-4">Ενέργειες</h4>
<div class="row row-cols-1 row-cols-md-4 g-4 mb-4">
    <div class="col">
        <a asp-controller="Game" asp-action="EditGame" asp-route-gameYear="@Model.Year" asp-route-gameTypeSlug="@Model.TypeSlug"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Επεξεργασία</h5>
                    <i class="bi bi-pencil"></i>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-controller="Game" asp-action="ManageGamePuzzleList" asp-route-gameYear="@Model.Year" asp-route-gameTypeSlug="@Model.TypeSlug"
           class="card-link">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Γρίφοι</h5>
                    <i class="bi bi-puzzle"></i>
                </div>
            </div>
        </a>
    </div>
</div>